{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}
Suppression de votre compte
{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <h1 class="d-flex justify-content-around">Voulez-vous vraiment supprimer votre compte?</h1>

    <div class="d-flex justify-content-around">
        {{ form_start(form, {'attr' : {'class': 'd-flex justify-content-around w-75 mt-5'}})}}
            {{ form_row(form.delete, {'attr' : {'value': 'Confirmer', 'class': 'btn-success d-inline'}}) }}
            {{ form_row(form.cancel, {'attr' : {'value': 'Annuler', 'class': 'btn-danger d-inline'}}) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

